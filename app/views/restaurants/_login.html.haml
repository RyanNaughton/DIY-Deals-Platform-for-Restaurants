#login.outline
	%div
		- if logged_in?
			%p= "Hello, #{current_user.first_name.titleize}."
			= link_to "Sign Out", "/logout", :remote => true, :method => :post
		- else
			%h1 Already have an account? Log in!
			= form_tag("/login", :method => "post", :remote => true) do
				= text_field_tag :email, nil, :placeholder => "Email Address", :size => 25
				%br/
				= password_field_tag :password, nil, :placeholder => "Password", :size => 14
				%br/
				= submit_tag "Log In"